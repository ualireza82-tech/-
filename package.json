{
  "name": "aj-sports-2026-backend",
  "version": "2.0.0",
  "description": "AJ Sports 2026 - Complete Backend with Stories, Admin Panel, Tweet Threads, and Advanced Features",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "test": "jest --testTimeout=10000",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset-db.js",
    "backup": "node scripts/backup.js",
    "clean:uploads": "node scripts/clean-uploads.js",
    "health": "curl http://localhost:3000/api/health || echo 'Server not running'",
    "monitor": "node scripts/monitor.js",
    "docker:build": "docker build -t aj-sports-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env aj-sports-backend",
    "docker:compose": "docker-compose up",
    "docker:compose:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "pm2:start": "pm2 start server.js --name aj-sports-backend",
    "pm2:stop": "pm2 stop aj-sports-backend",
    "pm2:restart": "pm2 restart aj-sports-backend",
    "pm2:logs": "pm2 logs aj-sports-backend",
    "pm2:monit": "pm2 monit",
    "pm2:delete": "pm2 delete aj-sports-backend"
  },
  "keywords": [
    "aj-sports",
    "social-media",
    "backend",
    "express",
    "socket.io",
    "postgresql",
    "stories",
    "twitter-clone",
    "real-time",
    "admin-panel"
  ],
  "author": "AJ Sports Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aj-sports/backend-2026.git"
  },
  "bugs": {
    "url": "https://github.com/aj-sports/backend-2026/issues"
  },
  "homepage": "https://github.com/aj-sports/backend-2026#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^4.0.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "redis": "^4.6.11",
    "ioredis": "^5.3.2",
    "bull": "^4.11.5",
    "joi": "^17.11.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "sharp": "^0.33.1",
    "fluent-ffmpeg": "^2.1.2",
    "busboy": "^1.6.0",
    "content-type": "^1.0.5",
    "mime-types": "^2.1.35",
    "validator": "^13.11.0",
    "geoip-lite": "^1.4.8",
    "useragent": "^2.3.0",
    "ua-parser-js": "^1.0.37",
    "crypto-js": "^4.2.0",
    "node-fetch": "^3.3.2",
    "form-data": "^4.0.0",
    "nodemailer": "^6.9.7",
    "html-to-text": "^9.0.5",
    "ejs": "^3.1.9",
    "qr-image": "^3.2.0",
    "node-cache": "^5.1.2",
    "lru-cache": "^10.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "cross-env": "^7.0.3",
    "faker": "^5.5.3",
    "pg-mem": "^2.9.1",
    "@types/node": "^20.9.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.12",
    "@types/cors": "^2.8.16",
    "@types/multer": "^1.4.11",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/validator": "^13.11.8",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/uploads/",
      "/logs/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "./__tests__/setup.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "volta": {
    "node": "18.18.2",
    "npm": "9.8.1"
  },
  "browserslist": [
    "node 16"
  ],
  "private": true,
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/aj-sports"
  }
}